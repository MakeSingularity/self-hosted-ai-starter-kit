        },
        {
            "label": "n8n: Check Ngrok Status",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/ngrok_webhook_manager.py",
                "status"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Check ngrok tunnel and webhook status",
            "icon": {
                "id": "pulse",
                "color": "terminal.ansiBlue"
            }
        },
        {
            "label": "n8n: Cleanup Ngrok",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/ngrok_webhook_manager.py",
